@model List<UI_test_player_TD.Model.Sistema>
@{
    ViewBag.Title = "SelecionaSistema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Telas <small>Selecione o Sistema</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i> Casos de Teste
            </li>
        </ol>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Nome</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sistema in Model)
                    {
                        <tr>
                            <td><a href="@Url.Action(sistema.Id.ToString(), "Tela")">@sistema.Nome</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

