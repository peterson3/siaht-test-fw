<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Test DashBoard</title>

    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">Test DashBoard</a>
            </div>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li>
                        <a href="@Url.Action("", "Home")"><i class="fa fa-fw fa-dashboard fa-2x"></i>&nbsp;Home</a>
                    </li>
                    <li>
                        <a href="javascript:;" data-toggle="collapse" data-target="#testcase-opts"><i class="fa fa-fw fa-file fa-2x"></i>&nbsp;Casos de Teste<i class="fa fa-fw fa-caret-down"></i></a>
                        <ul id="testcase-opts" class="collapse">
                            <li>
                                <a href="@Url.Action("", "TestCase")">Listar</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Novo", "TestCase")">Criar</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("", "TestSuite")"><i class="fa fa-fw fa-files-o fa-2x"></i>&nbsp;Roteiros de Teste</a>
                    </li>
                    <li>
                        <a href="@Url.Action("", "Trello")"><i class="fa fa-fw fa-trello fa-2x"></i>&nbsp;Trello</a>
                    </li>
                    <li>
                        <a href="@Url.Action("", "Sistema")">
                            <span class="fa-stack">
                                <i class="fa fa-fw fa-tv fa-stack-2x"></i>
                                <i class="fa fa-fw fa-terminal fa-stack-1x"></i>
                            </span>
                            &nbsp;Sistema
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("", "Tela")"><i class="fa fa-fw fa-window-maximize fa-2x"></i>&nbsp;Tela</a>
                    </li>
                    <li>
                        <a href="@Url.Action("", "Acao")"><i class="fa fa-fw fa-code fa-2x"></i>&nbsp;Ação</a>
                    </li>
                    <li>
                        <a href="@Url.Action("", "Documentacao")"><i class="fa fa-fw fa-book fa-2x"></i>&nbsp;Documentação</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </nav>
        <div id="page-wrapper">
            <div class="container-fluid .col-lg-12">
                @RenderBody()
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <!-- Bootstrap Core JavaScript -->
    <!-- Morris Charts JavaScript -->
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>

</body>
</html>
